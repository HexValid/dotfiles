[global]
	geometry = "300x5-5+21"
	indicate_hidden = yes
	shrink = no
	notification_height = 0
    separator_height = 2
    padding = 4
    horizontal_padding = 8
    frame_width = 2
    frame_color = "#005F87"
	separator_color = frame
	font = Gohu GohuFont 8
	markup = full
    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s</b>\n%b"
	alignment = left
	show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
	hide_duplicate_count = false

[urgency_low]
    background = "#121212"
    foreground = "#D0CFD0"
    timeout = 1

[urgency_normal] 	
	background = "#121212"
    foreground = "#D0CFD0"
    timeout = 3

[urgency_critical]
    background = "#121212"
    foreground = "#D0CFD0"
    timeout = 0
